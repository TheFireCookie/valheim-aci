{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "allowedValues": [
          "westcentralus",
          "westus",
          "eastus",
          "westeurope",
          "westus2",
          "northeurope",
          "southeastasia",
          "eastus2",
          "centralus",
          "australiaeast",
          "uksouth",
          "southcentralus",
          "centralindia",
          "brazilsouth",
          "southindia",
          "northcentralus",
          "eastasia",
          "canadacentral",
          "japaneast",
          "koreacentral",
          "francecentral",
          "switzerlandnorth",
          "germanywestcentral",
          "uaenorth"
        ]
      },
        "containerName": {
            "type": "string"
        },
        "imageName": {
            "type": "string",
            "defaultValue": "lloesche/valheim-server"
        },
        "osType": {
            "type": "string",
            "defaultValue": "Linux"
        },
        "numberCpuCores": {
            "type": "string",
            "defaultValue": "3"
        },
        "memory": {
            "type": "string",
            "defaultValue": "6"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ],
            "defaultValue": "Always"
        },
        "valheimServerName": {
            "type": "string"
        },
        "valheimWorldName": {
            "type": "string"
        },
        "valheimServerPassword": {
            "type": "securestring"
        },
        "ports": {
            "type": "array",
            "defaultValue": [
                {
                    "port": "2456",
                    "protocol": "UDP"
                },
                {
                    "port": "2457",
                    "protocol": "UDP"
                },
                {
                    "port": "2458",
                    "protocol": "UDP"
                }
            ]
        },
        "dnsNameLabel": {
            "type": "string"
        }
    }
    "resources": [     
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', stg6v7gr24txyrtw)]"
            ],
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "SERVER_PASS",
                                    "secureValue": "[parameters('valheimServerPassword')]"
                                },
                                {
                                    "name": "SERVER_NAME",
                                    "value": "[parameters('valheimServerName')]"
                                },
                                {
                                    "name": "WORLD_NAME",
                                    "value": "[parameters('valheimWorldName')]"
                                },
								{
                                    "name": "UPDATE_CRON",
                                    "value": "*/30 * * * *"
                                }
								,{
                                    "name": "BACKUPS_CRON",
                                    "value": "0 */3 * * *"
                                }
                                ,{
                                    "name": "BACKUPS_MAX_AGE",
                                    "value": "2"
                                }
								,{
                                    "name": "VALHEIM_PLUS",
                                    "value": "true"
                                }
                            ],
                            "ports": "[parameters('ports')]",
                            "volumeMounts": [
                                {
                                    "mountPath": "/config",
                                    "name": "config",
                                    "readOnly": false
                                }
                            ]
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "ipAddress": {
                    "type": "Public",
                    "ports": "[parameters('ports')]",
                    "dnsNameLabel": "[parameters('dnsNameLabel')]"
                },
                "volumes": [
                    {
                        "name": "config",
                        "azureFile": {
                            "readOnly": false,
                            "shareName": "config",
                            "storageAccountName": "stg6v7gr24txyrtw",
                            "storageAccountKey": "stg6v7gr24txyrtw, '2017-10-01').keys[0].value]"
                        }
                    }
                ]
            },
            "tags": {}
        }
    ],
    "outputs": {
        "containerUrl": {
            "type": "string",
            "value": "[concat(parameters('dnsNameLabel'), '.', parameters('location'), '.azurecontainer.io')]"
        }
    }
}